@model List<ClientComplaint>
@{
    ViewData["Title"] = "Complaints";
    Layout = "~/Views/Shared/_LayAdmin.cshtml";
}




<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class=" text-primary">Complaint List</h2>
        </div>
        <div class="col-6">
            @Html.ActionLink("Update Status", "UpdateStatus")

        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped " style=" width: 100% ">
            <thead>
                <tr>
                    <th>
                        Complaint Case ID
                    </th>
                    <th>
                        Computer Number
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Subject
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Client ID
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Finished Date
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="50%">@item.ComplaintID</td>
                    <td width="50%">@item.ComputerNumber</td>
                    <td width="50%">@item.StartDate</td>
                    <td width="50%">@item.CategorySubject</td>
                    <td width="50%">@item.Description</td>
                    <td width="50%">@item.ClientID</td>
                    <td width="50%">@item.Status</td>
                    <td width="50%">@item.FinishedDate</td>
                    

                </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Complaint exist</p>
    }




</div>
